@model Wedding

<h1>Plan Your Wedding</h1>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Create" asp-controller="Wedding" method="POST">
    <label asp-for="WedderOne"></label>
    <input asp-for="WedderOne"><br>
    <label asp-for="WedderTwo"></label>
    <input asp-for="WedderTwo"><br>
    <label asp-for="Date"></label>
    <!-- Can also use time for the type -->
    <input type="date" asp-for="Date"><br>
    <label asp-for="Address"></label>
    <input asp-for="Address"><br>
    <input type="hidden" asp-for="UserId" value="@ViewBag.User.UserId">
    <input type="submit" value="Create" class="btn btn-outline-warning">

</form>